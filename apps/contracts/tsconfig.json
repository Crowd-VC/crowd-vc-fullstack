  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["./contracts/**/*", "./scripts/**/*", "./test/**/*", "./hardhat.config.ts"],
  "exclude": ["node_modules", "dist", "cache", "artifacts"]
}
