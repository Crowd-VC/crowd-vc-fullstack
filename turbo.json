{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "PRIVY_APP_ID",
    "PRIVY_APP_SECRET",
    "RESEND_API_KEY",
    "STACK_SECRET_SERVER_KEY",
    "DATABASE_URL",
    "PINATA_KEY",
    "PINATA_API_KEY",
    "PINATA_JWT_TOKEN"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "artifacts/**"]
    },
    "compile": {
      "outputs": ["artifacts/**", "cache/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["compile"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "deploy": {
      "dependsOn": ["compile"],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:seed": {
      "cache": false
    }
  }
}
