{
  "name": "@crowd-vc/contracts",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "node": "hardhat node",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:base": "hardhat run --network base scripts/deploy.ts",
    "verify": "hardhat verify",
    "clean": "hardhat clean",
    "generate:addresses": "hardhat run scripts/generateAddresses.ts",
    "deploy-and-update": "hardhat run scripts/deploy-and-update.ts",
    "deploy:sepolia": "hardhat run --network sepolia scripts/deploy-and-update.ts",
    "deploy:sepolia:verify": "DEPLOY_VERIFY=true hardhat run --network sepolia scripts/deploy-and-update.ts",
    "deploy:baseSepolia": "DEPLOY_MOCKS=true hardhat run --network baseSepolia scripts/deploy-and-update.ts",
    "deploy:baseMainnet": "hardhat run --network baseMainnet scripts/deploy-and-update.ts",
    "deploy:baseMainnet:verify": "DEPLOY_VERIFY=true hardhat run --network baseMainnet scripts/deploy-and-update.ts",
    "deploy:hardhat": "hardhat run --network hardhat scripts/deploy-and-update.ts",
    "full-deploy": "DEPLOY_CLEAN=true pnpm compile && pnpm deploy-and-update"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.4",
    "@nomicfoundation/hardhat-ignition-viem": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.1",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.1",
    "@nomicfoundation/hardhat-verify": "^3.0.4",
    "@nomicfoundation/hardhat-viem": "^3.0.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "chai": "^6.2.0",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.11",
    "typescript": "5.8.3",
    "viem": "^2.37.11"
  }
}
